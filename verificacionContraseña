# Contraseña

def verificarLetrasNumeros(contra):   # Verifica que no haya caracteres especiales
    return contra.isalnum()

def verificarCantLetras(contra):  # Verifica que sean minimo 8 letras
    if len(contra)< 8:
        return False
    else:
        return True

def verificarMayus(contra):   # Verifica que haya minimo una mayuscula
    if not contra.islower():
        return True
    else:
        return False

def verificarLetras (contra):  # Verifica que haya minimo una letra
    if contra.isalpha():
        return False
    else:
        return True

def verificarNum(contra):  # Verifica que haya minimo un numero
    if contra.isdigit():
        return False
    else:
        return True

#main
    
contraseña = input("Ingrese su contraseña: ")
while len(contraseña)>0:
    valido = True
    while valido:
        letrasNumeros = verificarLetrasNumeros(contraseña)
        if not letrasNumeros:
            valido = False
            break
        cantidadLetras = verificarCantLetras(contraseña)
        if not cantidadLetras:
            valido= False
            break
        cantidadMayus = verificarMayus(contraseña)
        if not cantidadMayus:
            valido = False
            break
        letras = verificarLetras(contraseña)
        if not letras:
            valido = False
            break
        numeros = verificarNum(contraseña)
        if not numeros:
            valido = False
            break
    if not valido:
        print('Contraseña no valido')
        contraseña = input('Ingrese otra contraseña ')
